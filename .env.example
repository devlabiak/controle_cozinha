# ==================== BANCO DE DADOS ====================
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/controle_cozinha

# ==================== SEGURANÇA ====================
# ⚠️ IMPORTANTE: Gerar uma chave secreta forte para produção
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256

# ==================== AUTENTICAÇÃO ====================
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== DOMÍNIO ====================
BASE_DOMAIN=wlsolucoes.eti.br

# ==================== CORS ====================
# Domínios permitidos (separados por vírgula)
ALLOWED_ORIGINS=https://painelfood.wlsolucoes.eti.br,https://cozinha.wlsolucoes.eti.br,https://admin.wlsolucoes.eti.br

# ==================== COOKIES ====================
# HttpOnly e Secure cookies (ativar em produção)
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# ==================== LOGGING ====================
LOG_LEVEL=INFO

# ==================== REDIS (para blacklist de tokens) ====================
REDIS_URL=redis://localhost:6379/0
